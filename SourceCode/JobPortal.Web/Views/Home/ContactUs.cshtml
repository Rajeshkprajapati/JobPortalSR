@using JobPortal.Model.DataViewModel.Shared
@model UserViewModel
@{
    ViewData["Title"] = "Contact Us";
}
<!-- Titlebar
================================================== -->
<div id="titlebar" class="banner-bg row" style="background-image: url(/Assets/images/all-categories-photo.jpg)">
    <div class="container titlebar-inner">
        <h2 class="whitetitle">Contact Us</h2>
    </div>
</div>

<nav id="breadcrumbs" class="container">
    <ol class="breadcrumb">
        <li><a href="/Home/Index/">Home</a></li>
        <li>Contact Us</li>
    </ol>
</nav>

<!-- Content
================================================== -->
<!-- Container -->
<div class="row panelbg-gray10 home-screen-section">
    <div class="container">
        <h2 class="blacktitle">Our Office</h2>
        <div class="col-sm-6 google-map-container">
            <div id="googlemaps" class="google-map google-map-full">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3502.4067654300834!2d77.38302791440682!3d28.617568591510324!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390ce56197fc4865%3A0x2743b721b342a663!2sSteep%20Rise%20Infotech!5e0!3m2!1sen!2sin!4v1599125171214!5m2!1sen!2sin" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
        <div class="col-sm-6">
            <p>Due to the bespoke nature of our work, we would like to talk with you so that we can really get to grips with how you and your business work. That way, we can tailor a solution to both your requirements and your budget. </p>
            <ul class="contact-address info-block">
                <li>C-76, Sector 63, </li>
                <li>Noida - 201301 (U.P) India</li>
            </ul>
            <ul class="contact-informations info-block">
                <li><i class="fa fa-phone"></i> +91-120-455-4091, +91-981-155-9349</li>
                <li><i class="fa fa-envelope"></i> <a href="http://www.vasterad.com/cdn-cgi/l/email-protection" class="__cf_email__" data-cfemail="b0ddd1d9dcf0d5c8d1ddc0dcd59ed3dfdd">info@careerindeed.in</a></li>
                <li><i class="fa fa-globe"></i> www.careerindeed.in</li>
            </ul>
        </div>

    </div>
    <!-- Container / End -->
</div>
<!-- Container -->
<div class="container home-screen-section">
    <h2 class="text-center blacktitle">Contact Us</h2>
    <!-- Contact Form -->
    <section id="contact" class="col-sm-6 col-sm-offset-3">

        @{
            @if (ViewBag.Contact != null)
            {
                <div class="alert alert-success" role="alert"><label>@ViewBag.Contact</label></div>
            }
            @if (ViewBag.ContactError != null)
            {
                <div class="alert alert-danger" role="alert"><label>@ViewBag.ContactError</label></div>
            }
        }


        <!-- Form -->
        <form method="post" action="/Home/ConatctUs/" name="contactform" id="contactform">
            <fieldset>
                <div class="form-group">
                    <label class="input-label">Name:</label>
                    <input name="fullname" type="text" id="name" placeholder="Full Name" required class="form-control input-elements" />
                </div>
                <div class="form-group">
                    <label class="input-label">Mobile:</label>
                    <input type="text" name="phone" id="phone" placeholder="Phone Number" minlength="10" maxlength="10" required class="form-control input-elements" />
                </div>
                @{
                    var user = Context.Session.Get<UserViewModel>(Constants.SessionKeyUserInfo);
                    @if (user != null)
                    {
                        <div class="form-group">
                            <label class="input-label">Email: <span>*</span></label>
                            <input name="email" type="text" id="email" value="@user.Email" readonly class="form-control input-elements">
                        </div>
                    }
                    else
                    {

                        <div class="form-group">
                            <label class="input-label">Email: <span>*</span></label>
                            <input name="email" type="text" id="email" placeholder="Email" required class="form-control input-elements">
                        </div>
                    }
                }
                <div class="form-group">
                    <label class="input-label">Message: <span>*</span></label>
                    <textarea cols="40" rows="3" name="details" id="details" placeholder="Details" spellcheck="true" required class="form-control input-elements"></textarea>
                </div>
            </fieldset>
            <div id="result"></div>
            <div class="btn-row text-center">
                <input type="submit" class="btn btn-success" id="sendMessage" value="Send Message" />
            </div>
            <!-- Success Message -->
            <mark id="message"></mark>
        </form>
    </section>
    <!-- Contact Form / End -->
</div>
<!-- Container / End -->

@section scripts{
    <script>
        $(document).ready(function () {
            //SpecialCharAndAlphabet($('#phone'));
            $('#phone').keypress(function (e) {
                $("#error_sp_msg").remove();
                var k = e.keyCode,
                    $return = (k >= 48 && k <= 57);
                if (!$return) {
                    $("<span/>", {
                        "id": "error_sp_msg",
                    }).insertAfter($(this));
                    return false;
                }
            });
            $('#name').each(function () {
                $(this).keypress(function (e) {
                    $("#error_sp_msg").remove();
                    var k = e.keyCode,
                        $return = ((k > 64 && k < 91) || (k > 96 && k < 123) || k === 8 || k === 32);
                    if (!$return) {
                        $("<span/>", {
                            "id": "error_sp_msg",
                        }).insertAfter($(this));
                        return false;
                    }
                });
            });
        });
    </script>
}
