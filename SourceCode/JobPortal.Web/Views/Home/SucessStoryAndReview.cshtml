@using JobPortal.Model.DataViewModel.Home
@model SuccessStoryViewModel
@{
    ViewData["Title"] = "Sucess Story And Review";
}

@{
    UserViewModel user = Context.Session.Get<UserViewModel>(Constants.SessionKeyUserInfo);

    <div id="titlebar" class="banner-bg row" style="background-image: url(/Assets/images/all-categories-photo.jpg)">
        <div class="container titlebar-inner">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="whitetitle">Feedback</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Page Title End -->
    <div class="container home-screen-section">
        <!--Start comment Section-->
        <h2 class="text-center blacktitle">Feedback</h2>
        @if (@user == null)
        {
            <div class="spacer-top-20 col-xs-12">
                <p class="home-screen-section text-center">You must be logged in to post a review.</p>
            </div>
        }
        else
        {
            <form asp-action="PostSucessStoryReview" method="post" enctype="multipart/form-data" class="col-md-6 col-md-offset-3 col-xs-offset-0 home-screen-section">

                @if (TempData["Feedback"] != null)
                {
                    <div class="alert alert-success text-center">
                        <p>@Html.Raw(@TempData["Feedback"].ToString())</p>
                    </div>
                }
                <div class="form-group">
                    <label class="input-label">
                        Message
                    </label>
                    <textarea class="form-control input-elements" asp-for="Message" id="areaCommet" name="Message" cols="52" rows="7" placeholder="MESSAGE" minlength=10 required></textarea>
                    <p>* <small>Should be maximum 100 words</small></p>
                </div>
                <div class="form-group spacer-top-20 text-center">
                    <button type="submit" id="submitReview" class="btn btn-success">Post</button>
                </div>
            </form>
        }
    </div>
}
@section Scripts
    {
    <script src="~/lib/jquery/jquery-ui.min.js"></script>
    <script src="~/js/Home/SuccessStoryAndReview.js"></script>
}
