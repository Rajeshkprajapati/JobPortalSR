
@{
    ViewData["Title"] = "Freelancer Jobs";
}

<style>
    .pagination {
        display: contents !important;
    }
</style>

@{
    UserViewModel user = Context.Session.Get<UserViewModel>
        (Constants.SessionKeyUserInfo);
    if (user != null)
    {
        @if (user.RoleName == "Admin")
        {
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}



<!-- Titlebar
================================================== -->
<div id="titlebar" class="banner-bg row" style="background-image: url(/Assets/images/all-categories-photo.jpg);">
    <div class="container titlebar-inner">
        <div class="row">
            <div class="col-sm-8">
                <h2 class="whitetitle"><span class="title-bdr-black-4">Jobs of cities</span></h2>
            </div>
            <div class="col-sm-4 text-right spacer-top-10">
                <a href="/JobSeekerManagement" class="btn btn-primary btn-lg">Search more jobs</a>
            </div>
        </div>
    </div>
</div>

<!-- Content
================================================== -->
<div class="home-screen-section container">
    <h2 class="blacktitle">We found best matching:</h2>
    <!-- Recent Jobs -->
    <div class="eleven columns">
        <div class="padding-right">
            <div class="listings-container">

                @if (ViewBag.FreelancerJobs != null)
                {
                    @foreach (var jobs in ViewBag.FreelancerJobs)
                    {
                        <a href="/Job/JobDetails/?jobid=@jobs.JobPostId" class="listing full-time">
                            <div class="listing-logo">
                                <img src="@jobs.CompanyLogo" alt="">
                            </div>
                            <div class="listing-title">
                                <h4> @jobs.JobTitle <span class="listing-type">@jobs.EmploymentStatus</span></h4>
                                <ul class="listing-icons">
                                    <li><i class="ln ln-icon-Management"></i> @jobs.CompanyName</li>
                                    <li><i class="ln ln-icon-Map2"></i> @jobs.City</li>
                                    <li><i class="ln ln-icon-Money-2"></i>@jobs.CTC</li>
                                    <li><div class="listing-date new">@jobs.NumberOfDays&#8203;d ago</div></li>
                                </ul>
                            </div>
                        </a>
                    }

                }
                else
                {
                    <p> No data found</p>
                }
            </div>
            <div class="pagination-container">
                <nav class="pagination">
                    <ul id="pagin">
                        @*<li><a href="#" class="current-page">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li class="blank">...</li>
                            <li><a href="#">22</a></li>*@
                    </ul>
                </nav>
                <nav class="pagination-next-prev">
                    <ul>
                        <li><a class="prev">Previous</a></li>
                        <li><a class="next">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="home-screen-section row panelbg-green">
    <div class="container">
        <!-- Widgets -->
        <!-- Sort by -->
        <div class="row">
            <div class="col-sm-4">
                <div class="widget text-center">
                    <img src="/Assets/images/app-images-v3.png" class="responsive-img">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="widget text-center">
                    <img src="/Assets/images/app-images-v3.png" class="responsive-img">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="widget text-center">
                    <img src="/Assets/images/app-images-v3.png" class="responsive-img">
                </div>
            </div>
        </div>
        <!-- Widgets / End -->
    </div>
</div>

@section Scripts
    {
    <script src="~/js/Jobseeker/JobDetails.js"></script>
    <script src="~/js/Shared/pagination.js"></script>
}