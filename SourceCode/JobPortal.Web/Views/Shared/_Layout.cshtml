<body id="wrapper">
    @{
        UserViewModel user = Context.Session.Get<UserViewModel>(Constants.SessionKeyUserInfo);
        <!-- Header
        ================================================== -->
        <header class="sticky-header container-fluid">
            <div class="row">
                <div class="container">
                    <div class="d-flex align-center">
                        <!-- Logo -->
                        <a href="/Home/Index/" class="logo"><img src="~/Assets/images/logo.png" class="img-responsive" alt="Job Portal" /></a>
                        <a href="#menu" class="menu-trigger"><i class="fa fa-reorder open-menu"></i> <i class="fa fa-arrow-left close-menu" aria-hidden="true"></i></a>
                        <!-- Menu -->
                        <nav id="navigation" class="main-nav justify-content-end align-center d-flex flex-1">
                            <ul id="responsive" class="page-nav d-flex">
                                <li class="nav-item">
                                    <a href="/Home/Index/" class="nav-item-link">Home</a>
                                </li>
                                @if (user != null)
                                {
                                    @if (user.RoleName == Constants.CorporateRole || user.RoleName == Constants.StaffingPartnerRole)
                                    {
                                        <li class="nav-item subnav">
                                            <a href="javascript:void(0);" class="nav-item-link">Employer</a>
                                            <ul class="subnav-items">
                                                <li class="subnav-item"><a asp-controller="Home" asp-action="Index" class="subnav-item-link">Search Resume</a></li>
                                                <li><a asp-area="Employer" asp-controller="SearchResume" asp-action="AdvanceResumeSearch" class="subnav-item-link">Advance Search</a></li>
                                                <!--<li><a asp-area="Employer" asp-controller="JobManagement" asp-action="JobPosting">Post Job</a></li> -->
                                                <li class="subnav-item"><a asp-area="Shared" asp-controller="BulkJobPost" asp-action="Index" class="subnav-item-link">Bulk Job Post</a></li>
                                            </ul>
                                        </li>
                                    }
                                    else if (user.RoleName == Constants.StudentRole)
                                    {
                                        <li class="nav-item subnav">
                                            <a href="javascript:void(0)" class="nav-item-link">Job Seeker</a>
                                            <ul class="subnav-items">
                                                <li class="subnav-item"><a asp-area="Jobseeker" asp-controller="JobSeekerManagement" asp-action="Index" class="subnav-item-link">Search Job</a></li>
                                                <li class="subnav-item"><a asp-area="Jobseeker" asp-controller="ResumeBuilder" asp-action="Index" class="subnav-item-link">Create Resume</a></li>
                                            </ul>
                                        </li>
                                    }
                                }

                                @if (user != null)
                                {
                                    <li class="action-navlink-nav-item subnav">
                                        @if (user.ProfilePic != "")
                                        {
                                            @if (user != null && user.RoleName == Constants.CorporateRole)
                                            {
                                                <span class="action-nav-link-text employer">
                                                    @user.FullName
                                                </span>
                                            }
                                            else if (user.RoleName == Constants.StudentRole)
                                            {
                                                <span class="action-nav-link-text jobseeker">
                                                    @user.FullName
                                                </span>
                                            }

                                        }
                                        <ul class="subnav-items">
                                            @if (user != null && user.RoleName == Constants.CorporateRole)
                                            {
                                                <li class="subnav-item"><a asp-area="Employer" asp-controller="Dashboard" asp-action="EmpDashboard" class="subnav-item-link">Dashboard</a></li>

                                            }
                                            @if (user.RoleName == Constants.StudentRole)
                                            {
                                                <li class="subnav-item">
                                                    <a asp-area="Jobseeker" asp-controller="JobSeekerManagement" asp-action="Dashboard" class="subnav-item-link">Dashboard</a>
                                                </li>
                                                <li class="subnav-item"><a asp-area="Jobseeker" asp-controller="JobSeekerManagement" asp-action="Profile" class="subnav-item-link">Edit Profile</a></li>
                                            }
                                            else
                                            {
                                                @*<li class="subnav-item"><a onclick="AddEditEmp()" class="subnav-item-link">Edit Profile</a></li>*@
                                            }

                                            <li class="subnav-item"><a href="/Auth/CreateNewPassword/" class="subnav-item-link">Change Password</a></li>
                                            <li class="subnav-item"><a href="/Auth/Logout/" class="subnav-item-link">Logout</a></li>
                                        </ul>
                                    </li>

                                }
                                else
                                {
                                    <li class="action-navlink-nav-item">
                                        <a href="/Auth/JobSeekerLogin/" class="action-nav-link jobseeker">JOBSEEKER </a>
                                        <a href="/Auth/EmployerLogin/" class="action-nav-link employer">EMPLOYER</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                        <!-- Menu end -->
                    </div>
                </div>
            </div>
        </header>
    }
    @*loader*@
    <div id="loader" hidden>
        <img id="imgloader" src="~/images/ajax-loader1.gif" />
    </div>
    <main class="container-fluid">
        @RenderBody()
    </main>
