@using JobPortal.Model.DataViewModel.Shared
@model SearchJobViewModel


@{
    UserViewModel user = Context.Session.Get<UserViewModel>
(Constants.SessionKeyUserInfo);
    int jRoleId = 0;
    string jRole = string.Empty;
    if (null != user)
    {
        jRole = user.JobTitleName;
    }
<style>
    .multiselect{
    height:40px;
    }
    .multiselect-container {
        width: 100% !important
    }
    .input-group-addon {
        padding: 9px 7% !important;
    }
</style>

    <form asp-area="Jobseeker" id="formJobPartial" asp-controller="Job" asp-action="SearchJobList" method="post" class="col-xs-10 col-xs-offset-1 searchbar">
        <div class="col-xs-12">
            <div class="row top-row">
                <div class="col-sm-6 search-form-element">
                    @if (ViewBag.JobIndustryArea != null)
                    {
                        <select asp-for="JobCategory[0]" class="form-control" id="JobIndustryAreaId" asp-items="@(new SelectList(@ViewBag.JobIndustryArea,"JobIndustryAreaId", "JobIndustryAreaName"))">
                            <option value="">Job Industry</option>
                        </select>
                    }
                    else
                    {
                        <select asp-for="JobCategory" id="JobIndustryAreaId" class="form-control">
                            <option value="">Job Industry</option>
                        </select>
                    }
                </div>
                <div class="col-sm-6 search-form-element formultipleclassentry">
                    <input type="hidden" id="hdnJobTitleId" name="JobTitleId" for="JobTitleId" />
                    @*<select type="text" asp-for="JobTitle" id="jobtitle" multiple asp-items="@(new SelectList(ViewBag.AllJobRoles,"JobTitleId","JobTitleName"))" autocomplete="off" class="form-control" data-placeholder="Choose Job Title"></select>*@
                   <select type="text" asp-for="JobTitle[0]" id="JobTitle" name="JobTitle" multiple autocomplete="off" class="form-control" data-placeholder="Choose Job Title ">
                    <option value="-1" hidden>Please choose</option>
                    </select>
                </div>
            </div>
            <div class="row bottom-row">
                <div class="col-sm-4 search-form-element">
                    <input type="text" asp-for="Skills" class="form-control first-column" placeholder="Skill" />
                </div>
               
                <div class="col-sm-2 search-form-element">
                    <select class="form-control" name="MinExperiance" asp-for="MinExperiance">
                        <option value="-1">Min Exp</option>
                        <option value="0">Fresher</option>
                        @for (int i = 1; i <= 15; i++)
                        {
                            <option value=@i>@(i)</option>
                        }
                    </select>
                </div>
                <div class="col-sm-2 search-form-element">
                    <select class="form-control" name="MaxExperiance" asp-for="MaxExperiance">
                        <option value="-1">Max Exp</option>
                        <option value="0">Fresher</option>
                        @for (int i = 1; i <= 15; i++)
                        {
                            <option value=@i>@(i)</option>
                        }
                    </select>
                </div>
                <div class="col-sm-4 search-form-element">
                    <input asp-for="City" type="hidden" id="hdnCity" />
                    <input type="text" pattern="[A-Za-z ]{0,}" title="Only alphabets are allowed" id="City" class="form-control last-column" placeholder="Enter city" />
                </div>
            </div>
            <div class="row btn-row text-center">
                <input type="submit" id="SearchJobPartial" class="btn btn-success btn-lg" value="Search Job">
            </div>
        </div>
    </form>
}
