@using JobPortal.Model.DataViewModel.Shared
@model UserViewModel

<div class="container screen-height home-screen-section">
    <div class="login-form">
        <h2 class="blacktitle">Reset Password</h2>
        @if (!string.IsNullOrWhiteSpace(Convert.ToString(ViewData["SuccessMessage"])))
        {
            <div class="alert alert-success" role="alert">@ViewData["SuccessMessage"]</div>
        }

        <form class="login spacer-top-20" asp-action="ResetPassword" method="post" oninput='ConfirmPassword.setCustomValidity(ConfirmPassword.value != Password.value ? "Passwords do not match." : "")'>
            <fieldset>
                <div class="form-group">
                    <label for="Password" class="input-label">Password</label>
                    <input type="password" asp-for="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" name="Password" id="Password" class="form-control" maxlength="100" placeholder="Password" required>
                    <p>* Password must contain at least one number one uppercase One lowercase letter and one special characters and minimum 8 characters</p>
                </div>
                <div class="form-group">
                    <label for="ConfirmPassword" class="input-label">Confirm Password</label>
                    <input type="password" name="ConfirmPassword" id="ConfirmPassword" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control" maxlength="100" placeholder="Confirm Password" required>
                </div>
                <div class="form-group">
                    <label for="Email" class="input-label">Email</label>
                    <input type="hidden" asp-for="Email" name="Email" id="Email" />
                </div>
                <div class="form-group spacer-top-20">
                    <input class="btn btn-primary btn-block" value="Change password" type="submit">
                </div>
            </fieldset>
        </form>
    </div>
</div>
