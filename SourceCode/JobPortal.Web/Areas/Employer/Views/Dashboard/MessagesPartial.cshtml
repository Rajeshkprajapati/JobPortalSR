@using JobPortal.Model.DataViewModel.Shared
@model IEnumerable<MessageViewModel>


<div class="modal fade" id="emailPromptContainer" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emailPromptTitle">Email Sender</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="replyToJobSeeker(this)">Send</button>
            </div>
        </div>
    </div>
</div>

<!-- Titlebar -->

<div id="titlebar" class="col-sm-12 banner-bg" style="background-image: url(/Assets/images/all-categories-photo.jpg);">
    <h2 class="whitetitle">Messages</h2>
</div>

<nav id="breadcrumbs" class="col-sm-12">
    <ol class="breadcrumb">
        <li><a href="javascript:void(0)">Home</a></li>
        <li><a href="javascript:void(0)">Dashboard</a></li>
        <li>Message</li>
    </ol>
</nav>

<div class="col-xs-12">
    <div class="row">
        <div class="col-xs-8">
            <h4 class="subheader">Inbox</h4>
        </div>
        <div class="col-xs-4 d-flex align-center justify-content-end">
            <input type="text" required id="dateToFilterMessages" readonly class="message-action form-control input-elements">
            <a href="javascript:void(0)" onclick="toggleCalendar()" class="btn btn-default btn-lg">
                <i class="fa fa-calendar" aria-hidden="true"></i>
            </a>
        </div>
    </div>
</div>
<div class="col-xs-12 home-screen-section dashboard-list-box">
    <div class="dashboard-list-box-content table-responsive">
        <!-- Table -->
        <table class="manage-table table table-bordered">
            <tr class="active">
                <th>
                    Sender
                </th>
                <th>
                    Email
                </th>
                <th>
                    Contact No
                </th>
                <th>Action</th>
            </tr>

            <!-- Item #1 -->
            @if (Model.Count() > 0)
            {
                @foreach (var sender in Model)
                {
                    <tr>
                        <td>
                            @sender.SenderFullName
                        </td>
                        <td>
                            @sender.SenderEmail
                        </td>
                        <td>
                            @sender.SenderMobile
                        </td>
                        <td>
                            @if (sender.IsReplied)
                            {
                                <span>Replied</span>
                            }
                            else
                            {
                                <a id="btnToReplyPrompt" href="javascript:void(0);" onclick="getReplyPrompt(@JsonConvert.SerializeObject(sender))" class="btn btn-link quick-links">Reply</a>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">No data to display</td>
                </tr>
            }

        </table>
    </div>
</div>
