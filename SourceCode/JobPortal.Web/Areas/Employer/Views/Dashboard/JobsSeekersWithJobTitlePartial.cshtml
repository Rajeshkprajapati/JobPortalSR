@using JobPortal.Model.DataViewModel.Employer.Dashboard;
@model IEnumerable<JobPortal.Model.DataViewModel.Employer.Dashboard.JobSeekerViewModel>

<!-- Titlebar -->
<div id="titlebar" class="col-sm-12 banner-bg" style="background-image: url(/Assets/images/all-categories-photo.jpg);">
    <h2 class="whitetitle">Manage Resumes</h2>
</div>
<nav id="breadcrumbs" class="col-sm-12">
    <ol class="breadcrumb">
        <li><a href="/Home/Index">Home</a></li>
        <li><a href="/Dashboard/EmpDashboard">Dashboard</a></li>
        <li>Manage Resumes</li>
    </ol>
</nav>
<div class="col-xs-12 home-screen-section dashboard-list-box">
    <div class="dashboard-list-box-content table-responsive">
        <!-- Table -->
        <table class="manage-table resumes table table-bordered">
            <tr class="active">
                <th>Name</th>
                <th>Contact</th>
                <th>Email</th>
                <th>Skills</th>
                <th>CTC</th>
                <th>ECTC</th>
                <th>Resume</th>
            </tr>
            @if (Model.Count() > 0)
            {
                @foreach (var jobseeker in Model)
                {
                    <tr class="success">
                        <td colspan="7">
                            <strong class="text-uppercase">@jobseeker.JobTitleByEmployer</strong>
                            <span class="job-type">Job Roles: @jobseeker.JobRoles</span>
                        </td>
                    </tr>
                    @foreach (var employee in jobseeker.jobSeekers)
                    {
                        <tr>
                            <td class="title">@employee.FullName</td>
                            <td class="title">@employee.MobileNo</td>
                            <td class="title">@employee.Email</td>
                            <td class="title">@employee.Skills.SkillSets</td>
                            <td class="title">@employee.CTC</td>
                            <td class="title">@employee.ECTC</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(employee.Resume))
                                {
                                    <a target="_blank" class="quick-links btn btn-link" download href="@employee.Resume">Download Resume</a>
                                }
                                else
                                {
                                    <span>Resume not attached</span>
                                }
                            </td>
                        </tr>
                    }
                }
            }
            else
            {
                <tr>
                    <td colspan="7">No data found to display</td>
                </tr>
            }
        </table>
    </div>
</div>

