@model IEnumerable<JobPortal.Model.DataViewModel.Admin.SuccessStory.SuccessStoryVideoViewModel>
@{
    ViewData["Title"] = "Success Story Video";
}

<link href="~/lib/datatable/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/css/Loader.css" rel="stylesheet" />
<link href="~/css/CommanPopup.css" rel="stylesheet" />

<!-- Page Title start -->
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">Manage Success Story</h1>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="breadCrumb"><a href="/Home/Index/">Home</a> / <span>Admin</span></div>
            </div>
        </div>
    </div>
</div>

<!-- Page Title End -->
<div class="container" style="padding-top:20px;padding-bottom:170px;">
    <div class="row">
        <div class="col-sm-12" >
            <div class="col-md-3">
                <h4> Success Story List </h4>
            </div>
            <div class="col-md-9">
                <button type="submit" class="btn btn-primary btn-sm pull-right" id="AddNew"
                        style="margin-bottom:10px;" data-toggle="modal" data-name="" data-target="#PopUpModal" onclick="AddNew()">
                    Add New
                </button>
            </div>
        </div>  

        <div class="col-md-12 table-responsive borderonScreen">
            <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
                <thead>
                    <tr>
                        <th hidden>Sr. No.</th>
                        <th hidden>Id</th>
                        <th>Video Title</th>
                        <th>Story For</th>
                        <th>Video File</th>
                        <th>Display Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                        <tr>
                            <td hidden>@data.SerialNo</td>
                            <td hidden>@data.Id</td>
                            <td>@data.Title</td>
                            <td>@data.Type</td>
                            <td>@data.VideoFile</td>
                            <td>@data.DisplayOrder</td>
                            <td class="tableButtonCenter">
                                <button type="submit" class="btn btn-success btn-sm editbtn" data-toggle="modal" data-name="" data-target="#PopUpModal" onclick="edit(this)">Edit</button>
                                <button type="submit" class="btn btn-danger btn-sm" onclick="ConfrimationDeleteMessage(@data.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade customModelPopup" id="PopUpModal" tabindex="-1" role="dialog" aria-labelledby="PopUpModalLabel">
    <div class="modal-dialog ModelDialog" role="document">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="PopUpModalLabel">Edit Record</h4>
            </div>
            <form enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="row">
                        <div class="form-group col-md-6" hidden>
                            <input type="text" class="form-control" id="Id">
                        </div>
                    </div>
                    <div class="row">
                        <div style="margin-top: auto;" class="form-group col-md-6">
                           
                            <input type="text" class="form-control" id="TitelName" required placeholder="Title Name">
                        </div>
                    </div>
                    <div class="row">
                        <div style="margin-top: auto;" class="form-group col-md-6">
                            <select class="form-control" id="StoryType" required>
                                <option selected value="0">Story For</option>
                                <option value="Training Partner">Training Partner</option>
                                <option value="Employer">Employer</option>
                                <option value="Student">Student</option>
                            </select>
                        </div>
                       
                    </div>
                    <div class="row">
                        <div style="margin-top: auto;" class="form-group col-md-6">
                           
                            <input type="text" class="form-control" id="videoLink" required placeholder="Video Link" />
                        </div>
                      </div>
                    <div class="row">
                        <div style="margin-top: auto;" class="form-group col-md-6">
                           
                            <input type="text" class="form-control" id="displayOrder" placeholder="Display Order" required />
                        </div>
                    </div>

                    </div>
                <div class="modal-footer footerModel">
                    <button type="button" id="SaveRec" class="btn btn-primary" onclick="Updatedata()">Save</button>
                    <button type="button" id="Update" class="btn btn-primary" onclick="Updatedata(this)">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>


                </div>
            </form>
        </div>

    </div>
</div>





@section Scripts
    {
    <script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatable/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/Admin/SuccessStoryVideo/SuccessStoryVideo.js"></script>
}

