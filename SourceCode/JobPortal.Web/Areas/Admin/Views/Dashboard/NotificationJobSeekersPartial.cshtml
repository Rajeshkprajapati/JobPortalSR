@using JobPortal.Model.DataViewModel.Shared
@model IEnumerable<UserViewModel>
<style>
    .deletebtn {
        margin: 24px 0px 0px 0px;
    }
</style>
<div class="row">
    <div class="col-md-12 table-responsive">

        @if (Model.Count() > 0)
        {
            @*<button id="tableDelete" class="btn btn-primary pull-right deletebtn" onclick="ConfrimationDeleteMessage()" value="">Delete</button>*@
            <table id="dataTable" class="display table table-striped table-bordered dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="allselectcheckbox" class="" onchange="SelectAll()">
                        </th>
                        <th hidden>
                            Userid
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                        <tr>
                            <td class="tableButtonCenter">
                                <input type="checkbox" class="checkBoxClass" value="@data.Email" id="bulkDeleteChkbox" name="bulkDeleteChkbox" onchange="SelectJob(this)">
                            </td>
                            <td hidden>
                                @data.UserId
                            </td>
                            <td>
                                @data.FirstName
                            </td>
                            <td>
                                @data.Email
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="row data-not-available">
                <label>
                    Data not found to display
                </label>
            </div>
        }
    </div>
</div>