@model IEnumerable<JobPortal.Model.DataViewModel.Admin.ManageUsers.ManageUsersViewModel>
@{
    ViewData["Title"] = "All Users";
}
<link href="~/lib/datatable/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/css/Loader.css" rel="stylesheet" />
<link href="~/css/Admin/manage-users.css" rel="stylesheet" />

<!-- Page Title start -->
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">Manage Users</h1>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="breadCrumb"><a href="/Home/Index/">Home</a> / <span>Admin</span></div>
            </div>
        </div>
    </div>
</div>
<!-- Page Title End -->

<div class="container" style="padding-top:20px;padding-bottom:170px;">
    <div class="row">
        <h4> Users List </h4>
        <hr />
        <div class="col-md-12 table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%" id="dataTable">
                <thead>
                    <tr>
                        <th hidden>#</th>
                        <th>User</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>CreatedDate</th>
                        @*<th>Password</th>*@
                        <th>Approved</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td hidden>@user.Userid</td>
                            <td>
                                @if (!user.IsViewed)
                                {
                                    <span class="un-viewed-notation">*&nbsp;&nbsp;</span>
                                }
                                <label>
                                    @user.FirstName
                                </label>
                            </td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.CreatedDate.ToString("MM/dd/yyyy HH:mm:ss")</td>
                            @*<td>@user.Password</td>*@
                            @if (@user.IsApproved == 0)
                            {
                                <td id="apr">No</td>
                            }
                            else
                            {
                                <td id="apr">Yes</td>
                            }
                            <td>@user.RoleName</td>
                            <td class="tableButtonCenter">
                                <button type="submit" class="btn btn-success btn-sm" data-toggle="modal" data-name="@user.FirstName @user.LastName" data-target="#PopUpModal" onclick="edit(this)">Edit</button>
                                <button type="submit" class="btn btn-danger btn-sm" onclick="ConfrimationDeleteMessage(@user.Userid)">Delete</button>
                                @if (user.IsApproved == 0)
                                {
                                    <button type="submit" id="approve" class="btn btn-primary btn-sm" onclick="approveuser(@user.Userid,this)">Approve</button>
                                }
                                else
                                {
                                    <button type="submit" id="approve" class="btn btn-primary btn-sm" disabled onclick="approveuser(@user.Userid,this)">Approved</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="loader" hidden>
    <img id="imgloader" src="~/images/ajax-loader1.gif" />
</div>

<!-- Modal -->
<div class="modal fade customModelPopup" id="PopUpModal" tabindex="-1" role="dialog" aria-labelledby="PopUpModalLabel">
    <div class="modal-dialog ModelDialog" role="document">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="PopUpModalLabel">Edit Record</h4>
            </div>
            <div class="modal-body">
                <form name="ManageUsers">
                    <div class="row">
                        <div class="form-group col-md-6" style="display:none">
                            <label for="first-name" class="control-label" style="padding-bottom:10px;">User ID </label>
                            <input type="text" class="form-control" id="UserId" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="first-name" class="control-label" style="padding-bottom:10px;">First Name:</label>
                            <input type="text" class="form-control" id="FName" required>
                        </div>
                    </div>
                    <div class="row">
                            <div class="form-group col-md-6">
                                <label for="last-name" class="control-label" style="padding-bottom:10px;">Last Name:</label>
                                <input type="text" class="form-control" id="LName" required>
                            </div>
                        </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="email" class="control-label" style="padding-bottom:10px;">Email:</label>
                            <input type="email" class="form-control" id="Email" readonly>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6" style="display:none">
                            <label for="email" class="control-label" style="padding-bottom:10px;">Password:</label>
                            <input type="password" class="form-control" id="psd" required>
                            @*<p style="font-size:11px">* Password must contain at least one number one uppercase One lowercase letter and one special characters and minimum 8 characters</p>*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="Role" class="control-label" style="padding-bottom:10px;">Role:</label>
                            <select id="Role" class="form-control" readonly>
                                <option value="Admin">Admin</option>
                                <option value="Student">Student</option>
                                <option value="Corporate">Corporate</option>
                                <option value="Staffing Partner">Staffing Partner</option>
                                <option value="Training Partner">Training Partner</option>
                            </select><br /><br />
                        </div>
                    </div>
                    @*</div>
                        <div class="modal-footer footerModel">*@
                    <button type="button" class="btn btn-primary" onclick="Updatedata()">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts
    {
    <script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatable/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/Admin/ManageUsers/ManageUsers.js"></script>
}


