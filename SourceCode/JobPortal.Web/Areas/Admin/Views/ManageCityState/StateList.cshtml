@model IEnumerable<JobPortal.Model.DataViewModel.Shared.StateViewModel>
@{
    ViewData["Title"] = "States";
}
<div id="titlebar">
    <div class="row">
        <div class="col-md-12">
            <!-- Breadcrumbs -->
            <nav id="breadcrumbs">
                <ul>
                    <li><a href="#">Dashboard</a></li>
                    <li>State List</li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 table-responsive">
        <div class="form">
            <input type="submit" class="button border fw margin-top-0 pull-right" id="AddNew" data-toggle="modal" data-name="" data-target="#PopUpModal" onclick="AddNew()" value="Add New" />
        </div>
        <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
            <thead>

                <tr>
                    <th hidden>Id</th>
                    <th>State Name</th>
                    <th>State Code</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stateModel in Model)
                {
                <tr>
                    <td hidden>@stateModel.CountryCode</td>
                    <td>@stateModel.State</td>
                    <td>@stateModel.StateCode</td>
                    <td class="action">
                        <a href="javascript:void(0);" data-toggle="modal" data-name="" data-target="#PopUpModal" onclick="edit(this)"><i class="fa fa-pencil"></i> Edit</a><br />
                        <a href="javascript:void(0);" onclick="ConfrimationDeleteState('@stateModel.CountryCode','@stateModel.StateCode')"><i class="fa fa-remove"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--Modal-->

<div class="modal fade" id="PopUpModal" tabindex="-1" role="dialog" aria-labelledby="locationModalCenter" aria-hidden="true" style="background-color: rgb(128 128 128 / 88%);">
    <div class="dashboard-content">
        <div class="row">
            <div class="col-lg-6 col-md-6 popupdata">
                <label class="close close-model" data-dismiss="modal">&times;</label>
                <div class="dashboard-list-box margin-top-5">
                    <h4 id="PopUpModalLabel">Edit Record</h4>
                    <div class="dashboard-list-box-content">
                        <div class="submit-page">
                            <div class="form" style="width:100%">
                                <h5>Country</h5>
                                <select class="selectDropdown" id="Country" name="Country" asp-items="@(new SelectList(@ViewBag.AllCountry, "CountryCode", "Country"))">
                                    <option value="0">--Select Country--</option>
                                </select>
                            </div>

                            <div class="form" style="width:100%" id="StateRow">
                                <h5>State Code</h5>
                                <input type="text" id="StateCode" name="StateCode" required class="search-field eduModeltxtbox" placeholder="State Code">
                            </div>

                            <div class="form" style="width:100%">
                                <h5>State Name</h5>
                                <input type="text" id="StateName" name="StateName" required class="search-field eduModeltxtbox" placeholder="State Name">
                            </div>

                            

                            <div class="form" style="width:33%" id="savebtn">
                                <input type="submit" id="SaveRec" class="button border fw margin-top-10  pull-right" onclick="AddData()" value="Save" />
                            </div>
                            <div class="form" style="width:33%" id="updatebtn">
                                <input type="submit" id="Update" class="button border fw margin-top-10 pull-right" onclick="Updatedata()" value="Update data" />
                            </div>
                            <div class="form" style="width:33%">
                                <input type="button" class="button border fw margin-top-10 " data-dismiss="modal" value="Close" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatable/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/Admin/StateList/StateList.js"></script>


